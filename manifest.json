{
   "name": "Amazon Bibliocommons",
   "version": "0.1",
   "description": "A version of the SPL Amazon Linky that can switch between Bibliocommons libraries.",
   "icons" :  {  
                "128" : "img/book128.png",
                 "48" : "img/book48.png",
                 "16" : "img/book16.png"
             },
   "permissions": [
      "tabs",
      "http://*.bibliocommons.com/",
      "http://labs.oclc.org/"
   ],
   "options_page": "options.html",
   "browser_action": {
       "default_title": "Amazon Bibliocommons Linky",
       "default_icon":  { "19" : "img/book19.png",
                          "38" : "img/book38.png"
                        }
   },
   "background": {
     "scripts": ["background.js"],
     "persistent": false
   },
   "manifest_version": 2
}
